@model DepartmentEditViewModel

@{
    ViewBag.Title = "Edit Department";
}
<form asp-controller="home" asp-action="DEdit" method="post" class="mt-3">
    <input hidden asp-for="DeptId" />
    <div class="form-group row">
        <label asp-for="DepartmentName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ManagerName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ManagerName" class="form-control" />
            <span asp-validation-for="ManagerName" class="text-danger"></span>
        </div>
    </div>

    


    <div class="form-group row">
        <label asp-for="Location" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
   
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <a asp-controller="home" asp-action="Dindex" class="btn btn-primary">
                Cancel
            </a>
        </div>
    </div>

    </form>
