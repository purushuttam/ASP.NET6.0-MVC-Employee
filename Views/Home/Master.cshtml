            <div class=" text-center">
            <a asp-controller="home" asp-action="DDetails" asp-route-id="@department.DeptId" class="p-4 m-1" style="color:black ;font-size: xx-large;">
            <i class="fa-solid fa-eye"></i>
            </a>
            <a asp-action="DEdit" asp-controller="home" asp-route-id="@department.DeptId" class="p-4 m-1" style="color:black;font-size: xx-large ;">
            <i class="fa-solid fa-pen-to-square"></i>
            </a>
            <a asp-action="DDelete" asp-controller="home" asp-route-id="@department.DeptId" class="p-4 m-1" style="color:black ;font-size: xx-large;" onclick="return confirm('Are your sure you want to delete the Employee : @department.DepartmentName')">
            <i class="fa-solid fa-trash"></i>
            </a>
            </div>
            </td>*@
            </tr>
        }
    </tbody>
</table>
</div>