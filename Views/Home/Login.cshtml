@model Credential
@{
    Layout = "_Layout1";
    ViewBag.Title = "Login Page";
}


<section class="vh-100 gradient-custom">
 <form asp-action="Login1" asp-controller="Home" method="get">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="UserName" type="text" id="typeEmailX" class="form-control form-control-lg" />
                                    <label asp-for="UserName" class="form-label" for="typeEmailX">Username</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="PassWord" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label asp-for="PassWord" class="form-label" for="typePasswordX">Password</label>
                                    <span asp-validation-for="PassWord" class="text-danger"></span>
                                </div>
                                <button class=" btn-outline-dark btn-lg " type="submit">Login1</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 </form>
</section>